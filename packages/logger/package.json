{
    "name": "@sawerjs/logger",
    "version": "0.0.0",
    "type": "module",
    "description": "Simple logger used by sawer",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "pkgroll --clean-dist --sourcemap",
        "dev": "pkgroll --watch --clean-dist"
    },
    "homepage": "https://github.com/mrozio13pl/sawer/blob/main/packages/logger",
    "repository": "mrozio13pl/sawer",
    "author": "mrozio13pl",
    "license": "MIT",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "engines": {
        "node": ">=18"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "picocolors": "^1.1.1"
    },
    "devDependencies": {
        "@sawerjs/tsconfig": "workspace:*",
        "@types/node": "^22.10.1",
        "pkgroll": "^2.5.1",
        "typescript": "^5.7.2"
    }
