{
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@server/*": ["server/*"]
        }
    },
    "include": ["src", "server", "sawer.config.js"],
    "exclude": ["node_modules"]
}
